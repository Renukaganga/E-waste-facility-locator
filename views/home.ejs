      <title>EcoEase</title>
   </head>
   <body>
      <!--==================== HEADER ====================-->
      <header class="header" id="header">
         <nav class="nav container">
            <a href="#" class="nav__logo">
               <img class="logo" src="assets/img/logo.svg" alt="">
            </a>

            <div class="nav__menu" id="nav-menu">
               <ul class="nav__list">

                  <li class="nav__item">
                     <a href="#locate" class="nav__link">Locate</a>
                  </li>
                  
                  <li class="nav__item">
                     <a href="#redeem" class="nav__link">Redeem</a>
                  </li>
               </ul>
            <% if (!currentUser) { %>
               <div class="nav__buttons">
                  <a href="/login" class="nav__button-login">Log In</a>
                  <a href="/register" class="nav__button-signin">Sign Up</a>
               </div>
            <% } else { %>
                <div class="nav__buttons">
                    <a href="" class="nav__button-login"> <%= currentUser.CreditPoints %> </a>
                    <a href="/userdashboard" class="nav__button-login"> <%= currentUser.FirstName %> </a>
                    <a href="/logout" class="nav__button-login"> Logout </a>
                </div>
                <% } %>
               <!--  Close Button  -->
               <div class="nav__close" id="nav-close">
                  <img class="icon" src="assets/img/close-line.svg" alt="close-icon">
               </div>
            </div>

            <!--  Toggle Button  -->
            <div class="nav__toggle" id="nav-toggle">
               <img class="icon" src="assets/img/menu-line.svg" alt="menu-line">
            </div>
         </nav>
      </header>

      <!--==================== MAIN ====================-->
      <main class="main">
         <!--==================== HOME ====================-->
         <section class="home" id="home">
            <div class="home__container container">
   
               <div class="home__content">
                  <div class="home__data">
                     <div class="home__text-img">
                        <div class="home__text">
                           <h3 class="home__subtitle">
                              Dispose your E-Waste and earn credits
                           </h3>
                           <h1 class="home__title">
                              E-Waste Facility Locator
                           </h1>
         
                           <p class="home__description">
                              Find the nearest e-waste facility to recycle all your electronic waste safely and responsibly with
                              government authorised E-Waste disposal facilities.
                           </p>
         
                           <a href="#locate" class="home__button">
                              Explore Locations
                           </a>
                        </div>
                        <div class="home__img">
                           <img src="assets/img/background-img.png" alt="">
                        </div>
                     </div>
   
                     <div class="home__features">
                        <div class="feature__container">
                           <img src="assets/img/logo.svg" alt="">
                           <p class="feature__title">Nearest E-Waste Collection Locator</p>
                           <p class="feature__subtitle">Users can easily find the nearest e-waste collection and recycling facilities in their area. This feature makes it convenient for people to responsibly dispose of their electronic devices.</p>
                        </div>
                        <div class="feature__container">
                           <img src="assets/img/logo.svg" alt="">
                           <p class="feature__title">Book a slot</p>
                           <p class="feature__subtitle">Users can choose form a variety fo e-waste facilities and book a slot accordingto them for e-waste pickup at their doorstep.</p>
                        </div>
                        <div class="feature__container">
                           <img src="assets/img/logo.svg" alt="">
                           <p class="feature__title">Redeem credit points</p>
                           <p class="feature__subtitle">Users can earn credits points by disposing e-waste in nearest facilities, and earn credit points relative to precious metals that could be scrapped form device. These credit points can be redeemed into useful items.</p>
                        </div>
                     </div>
   
                     <section class="locate" id="locate">
                        <div class="locate__container container">
                           <div class="locate__content">
            
                              <h2 class="locate__title">
                                 Find the nearest E-Waste Facility
                              </h2>
            
                              <div class="location__field">
                                 <label class="location__label" for="location">Enter your location:</label>
                                 <br>
                                 <form action="/userdefloc" method="post" style="display: inline;"> 
                                    <input class="location__input" type="text" id="location" name="location" placeholder="e.g., City, State, Country" required="true">
                                    <button href="/userdefloc" type="submit" class="locate__button-search">Search</button>
                                 </form>
                                 <form action="/getCurrLoc" method="POST" style="display: inline;">
                                    <input type="hidden" name="latitude" id="lat" value="">
                                    <input type="hidden" name="longitude" id="lng" value="">
                                    <button type="submit" class="locate__button-search">Find ME</button>
                                 </form>
                                 
                                </div>
                           </div>
                        </div>
                        <div class="map__image">
                           <img src="assets/img/map-vector.png" alt="">
                        </div>
                     </section>
                     
                  </div>
               </div>
            </div>
         </section>
     
         
         <!--==================== LOCATE ====================-->
         
